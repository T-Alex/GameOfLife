<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop" DefaultTargets="Publish">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <PublishTrimmed>true</PublishTrimmed>
    <PublishReadyToRun>true</PublishReadyToRun>
    <UseWPF>true</UseWPF>
    <RootNamespace>TAlex.GameOfLife</RootNamespace>
    <AssemblyName>GameOfLife</AssemblyName>
    <Title>Game of Life</Title>
    <Version>2.6.0</Version>
    <Company>Alex Titarenko</Company>
    <Description>The Game of Life is a cellular automaton devised by the British mathematician John Horton Conway in 1970.</Description>
    <Copyright>Copyright 2020 Alex Titarenko</Copyright>
    <ApplicationIcon>Resources\Icons\icon.ico</ApplicationIcon>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="TAlex.Common" Version="2.1.0" />
    <PackageReference Include="TAlex.WPF.Controls" Version="3.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\GameOfLife.Engine\GameOfLife.Engine.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
    <None Update="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>
  
  <ItemGroup>
    <None Include="Resources\Icons\icon.ico" />
        
    <Resource Include="Resources\Fonts\Fontawesome.ttf" />
    <Resource Include="Resources\Images\aboutLogoText.png" />
    <Resource Include="Resources\Images\aboutLogo.png" />
    
    <Content Include="Resources\Icons\FileFormats\Cells.ico" />
    <Content Include="Resources\Icons\FileFormats\Life.ico" />
    <Content Include="Resources\Icons\FileFormats\RLE.ico" />
    
    <Content Include="Patterns\Breeders\LWSS Breeder.rle" />
    <Content Include="Patterns\Guns\2c5 Spaceship Gun P416.rle" />
    <Content Include="Patterns\Guns\2c5 Spaceship Gun P690.rle" />
    <Content Include="Patterns\Guns\Cordership Gun P784.rle" />
    <Content Include="Patterns\Guns\P690 PT Cordership Gun.rle" />
    <Content Include="Patterns\Guns\Pseudo P34 Gun.rle" />
    <Content Include="Patterns\Oscillators\Billiard Table.rle" />
    <Content Include="Patterns\Oscillators\DRH Oscillators.rle" />
    <Content Include="Patterns\Oscillators\Extensible Low Period.rle" />
    <Content Include="Patterns\Oscillators\Glider Stream Crystal.rle" />
    <Content Include="Patterns\Oscillators\Low Period.rle" />
    <Content Include="Patterns\Oscillators\p103079214841.rle" />
    <Content Include="Patterns\Oscillators\Queen Bee Turn.rle" />
    <Content Include="Patterns\Oscillators\Traffic Light Hasslers.rle" />
    <Content Include="Patterns\Oscillators\Unique High Period.rle" />
    <Content Include="Patterns\Other Rules\Breeder 2.rle" />
    <Content Include="Patterns\Other Rules\Growing Ship.rle" />
    <Content Include="Patterns\Other Rules\Gun and Antigun %28Day and Night%29.rle" />
    <Content Include="Patterns\Signal Circuitry\P30 Racetrack.rle" />
    <Content Include="Patterns\Signal Circuitry\P46 Racetrack.rle" />
    <Content Include="Patterns\Signal Circuitry\Turing Machine 3 state.rle" />
    <Content Include="Patterns\Signal Circuitry\Unit Life Cell 512x512.rle" />
    <Content Include="Patterns\Signal Circuitry\Unit Life Deep Cell.rle" />
    <Content Include="Patterns\Simple\Clock.rle" />
    <Content Include="Patterns\Simple\Eight.rle" />
    <Content Include="Patterns\Simple\Galaxy.rle" />
    <Content Include="Patterns\Simple\Glider.rle" />
    <Content Include="Patterns\Simple\Gosper Glider Gun 1.rle" />
    <Content Include="Patterns\Simple\Gosper Glider Gun 2.rle" />
    <Content Include="Patterns\Simple\Oscillators.rle" />
    <Content Include="Patterns\Simple\Port.rle" />
    <Content Include="Patterns\Simple\Spaceships.rle" />
    <Content Include="Patterns\Simple\Still Life.rle" />
    <Content Include="Patterns\Syntheses\Make Harbor.rle" />
    <Content Include="Patterns\Syntheses\Make osc p3.rle" />
    <Content Include="Patterns\Syntheses\Make osc p4.rle" />
    <Content Include="Patterns\Syntheses\Make osc p5 plus.rle" />
    <Content Include="Patterns\Syntheses\Make p11.rle" />
    <Content Include="Patterns\Syntheses\Make p18.rle" />
    <Content Include="Patterns\Syntheses\Make p33.rle" />
    <Content Include="Patterns\Syntheses\Oscillator Syntheses.rle" />
  </ItemGroup>
  
  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
    <Compile Update="Properties\Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>
